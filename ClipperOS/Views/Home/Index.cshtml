@model ClipperOS.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>Usuários do Sistema</h1>
            <p class="text-muted">
                Total de registros: @Model.TotalUsers |
                Atualizado em: @Model.LastUpdated.ToString("dd/MM/yyyy HH:mm:ss")
            </p>
        </div>
    </div>

    @if (Model.HasError)
    {
        <div class="alert alert-danger">
            <strong>Erro!</strong> @Model.ErrorMessage
        </div>
    }
    else
    {
        if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Login</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Login</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Nenhum usuário cadastrado no sistema.
            </div>
        }
    }
</div>